{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2020",
    "module": "CommonJS",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "dist/cjs",
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "src/lib/tuna.js"
  ]
}
